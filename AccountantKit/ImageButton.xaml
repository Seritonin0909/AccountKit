<UserControl x:Class="AccountantKit.ImageButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AccountantKit"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <UserControl.Resources>
        <Style x:Key="borderSytle" TargetType="Border">
            <Setter Property="CornerRadius" Value="5"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="DodgerBlue"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Border x:Name="border" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource borderSytle}">
        <Grid Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Image x:Name="mainImage" Grid.Row="0" Stretch="Uniform"/>
        </Grid>
    </Border>
</UserControl>
